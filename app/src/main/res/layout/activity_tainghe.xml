<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context=".TaingheActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="#fff"
            android:padding="10dp">
            <TextView
                android:id="@+id/txtTainghe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_arrow_back_24"
                android:text="Tai Nghe "
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/locsp"
            android:layout_width="190dp"
            android:layout_height="20dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/locsp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lọc sản phẩm"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/locsp1"
                android:drawableLeft="@drawable/baseline_keyboard_arrow_down_24"></TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/layout_manhinh"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:id="@+id/sp1"
                            android:layout_width="190dp"
                            android:layout_height="280dp"
                            android:background="#fff"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp">
                            <ImageView
                                android:id="@+id/anhtn1"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:background="@drawable/tn1">
                            </ImageView>
                            <TextView
                                android:id="@+id/tentn1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/anhtn1"
                                android:layout_marginLeft="8dp"
                                android:text="TAI NGHE ASUS"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large">
                            </TextView>
                            <TextView
                                android:id="@+id/giatn1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tentn1"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="2.200.000 VNĐ"
                                android:textColor="@color/black">
                            </TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/sp2"
                            android:layout_width="190dp"
                            android:layout_height="280dp"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="15dp"
                            android:background="#fff"
                            android:layout_toRightOf="@id/sp1">
                            <ImageView
                                android:id="@+id/anhtn2"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:background="@drawable/tn4">
                            </ImageView>
                            <TextView
                                android:id="@+id/tentn2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/anhtn2"
                                android:layout_marginLeft="8dp"
                                android:text="TAI NGHE HURA"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large">
                            </TextView>
                            <TextView
                                android:id="@+id/giatn2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tentn2"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="1.999.000 VNĐ"
                                android:textColor="@color/black">
                            </TextView>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:id="@+id/sp3"
                            android:layout_width="190dp"
                            android:layout_height="280dp"
                            android:background="#fff"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp">
                            <ImageView
                                android:id="@+id/anhtn3"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:background="@drawable/tn3">
                            </ImageView>
                            <TextView
                                android:id="@+id/tentn3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/anhtn3"
                                android:layout_marginLeft="8dp"
                                android:text="TAI NGHE RAZER"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large">
                            </TextView>
                            <TextView
                                android:id="@+id/giatn3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tentn3"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="1.500.000 VNĐ"
                                android:textColor="@color/black">
                            </TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/sp4"
                            android:layout_width="190dp"
                            android:layout_height="280dp"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:background="#fff"
                            android:layout_toRightOf="@id/sp3">
                            <ImageView
                                android:id="@+id/anhtn4"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:background="@drawable/tn5">
                            </ImageView>
                            <TextView
                                android:id="@+id/tentn4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/anhtn4"
                                android:layout_marginLeft="8dp"
                                android:text="TAI NGHE FULHEN"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large">
                            </TextView>
                            <TextView
                                android:id="@+id/giatn4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tentn4"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="3.000.000 VNĐ"
                                android:textColor="@color/black">
                            </TextView>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:id="@+id/sp5"
                            android:layout_width="190dp"
                            android:layout_height="280dp"
                            android:background="#fff"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp">
                            <ImageView
                                android:id="@+id/anhtn5"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:background="@drawable/tn7">
                            </ImageView>
                            <TextView
                                android:id="@+id/tentn5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/anhtn5"
                                android:layout_marginLeft="8dp"
                                android:text="TAI NGHE ZIDLI"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large">
                            </TextView>
                            <TextView
                                android:id="@+id/giatn5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tentn5"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="999.000 VNĐ"
                                android:textColor="@color/black">
                            </TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/sp6"
                            android:layout_width="190dp"
                            android:layout_height="280dp"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:background="#fff"
                            android:layout_toRightOf="@id/sp5">
                            <ImageView
                                android:id="@+id/anhtn6"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:background="@drawable/tn9">
                            </ImageView>
                            <TextView
                                android:id="@+id/tentn6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/anhtn6"
                                android:layout_marginLeft="8dp"
                                android:text="TAI NGHE KAIRA"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large">
                            </TextView>
                            <TextView
                                android:id="@+id/giatn6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tentn6"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="2.790.000 VNĐ"
                                android:textColor="@color/black">
                            </TextView>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_home_24" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_notifications_24" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_favorite_24" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_shopping_cart_24" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>